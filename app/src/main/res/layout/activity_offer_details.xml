<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background_pressed"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/list_background_pressed">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/suits_new" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_background"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer ends in 13h 12m"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="BUY FOR $11.52"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/list_background_pressed">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="SUITS RESPECT"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingLeft="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="SEASON 3 EPISODE 2"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:padding="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="The Android Holo Colors Generator allows you to easily create Android components such as editext or spinner with your own colours for your Android application - See more at: http://android-holo-colors.com/#sthash.baVlZu97.dpuf"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/descriptionText"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_background" />


    </RelativeLayout>

</LinearLayout>