<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/list_background_pressed"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/icon_bacground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:paddingLeft="12dp"
        android:background="@color/list_background_alpha"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Suits"
            android:textColor="@color/drawer_item_color"
            android:paddingTop="12dp"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state"
            android:text="Season"
            android:textSize="12sp"
            android:textColor="@color/drawer_item_color"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@android:drawable/ic_lock_idle_lock"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/state"
            android:layout_marginRight="12dp"
            />

    </RelativeLayout>
</RelativeLayout>